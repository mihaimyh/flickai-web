<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/jpeg" href="/favicon.jpg" />
  <link rel="icon" type="image/svg+xml" href="/vite.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="theme-color" content="#3b82f6" />
  <title>{{title}}</title>
  <meta name="description" content="{{description}}">
  <meta name="keywords" content="{{keywords}}">
  <meta name="author" content="{{meta.siteName}} Team">
  <meta name="robots" content="index, follow">
  <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
  <link rel="canonical" href="{{canonicalUrl meta.lang page}}">
  <link rel="sitemap" type="application/xml" title="Sitemap" href="https://flickai.net/sitemap.xml" />

  <!-- Hreflang Tags -->
  {{#each availableLanguages}}
  <link rel="alternate" hreflang="{{code}}" href="{{canonicalUrl code ../page}}" />
  {{/each}}
  <link rel="alternate" hreflang="x-default" href="{{canonicalUrl 'en' page}}" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="{{#if ogType}}{{ogType}}{{else}}website{{/if}}">
  <meta property="og:url" content="{{canonicalUrl meta.lang page}}">
  <meta property="og:title" content="{{#if ogTitle}}{{ogTitle}}{{else}}{{title}}{{/if}}">
  <meta property="og:description" content="{{#if ogDescription}}{{ogDescription}}{{else}}{{description}}{{/if}}">
  <meta property="og:image" content="{{#if ogImage}}{{ogImage}}{{else}}https://flickai.net/images/social-preview.jpg{{/if}}">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="{{canonicalUrl meta.lang page}}">
  <meta property="twitter:title" content="{{#if ogTitle}}{{ogTitle}}{{else}}{{title}}{{/if}}">
  <meta property="twitter:description" content="{{#if ogDescription}}{{ogDescription}}{{else}}{{description}}{{/if}}">
  <meta property="twitter:image" content="{{#if ogImage}}{{ogImage}}{{else}}https://flickai.net/images/social-preview.jpg{{/if}}">

  <!-- Structured Data -->
  {{{schemaForPage meta.lang page title description faq}}}
  {{#if schema}}
    {{{schema}}}
  {{/if}}

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
