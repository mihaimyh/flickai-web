---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations, getLangPrefix } from '../../utils/i18n';

const translations = getTranslations('en');
const integrations = translations.integrations || {};
const indexPage = integrations.index || {};
const langPrefix = '';
---

<BaseLayout
  title={indexPage.title || 'Integrations & Workflows - FlickAI'}
  description={indexPage.description || ''}
  keywords={indexPage.keywords || ''}
  lang="en"
  translations={translations}
>
  <main class="container section">
    <h1 class="section-title">{indexPage.heading || 'Integrations & Workflows'}</h1>
    <div class="legal-content">
      {indexPage.intro && <p class="mb-4">{indexPage.intro}</p>}

      {indexPage.methods && indexPage.methods.title && (
        <>
          <h2 class="mb-4">{indexPage.methods.title}</h2>
          <ul class="mb-4" style="padding-left: 1.5rem;">
            {indexPage.methods.point1 && <li>{indexPage.methods.point1}</li>}
            {indexPage.methods.point2 && <li>{indexPage.methods.point2}</li>}
            {indexPage.methods.point3 && <li>{indexPage.methods.point3}</li>}
          </ul>
        </>
      )}

      {indexPage.ideas && indexPage.ideas.title && (
        <>
          <h2 class="mb-4">{indexPage.ideas.title}</h2>
          <ul class="mb-4" style="padding-left: 1.5rem;">
            {indexPage.ideas.point1 && <li>{indexPage.ideas.point1}</li>}
            {indexPage.ideas.point2 && <li>{indexPage.ideas.point2}</li>}
            {indexPage.ideas.point3 && <li>{indexPage.ideas.point3}</li>}
          </ul>
        </>
      )}
    </div>
  </main>
</BaseLayout>
